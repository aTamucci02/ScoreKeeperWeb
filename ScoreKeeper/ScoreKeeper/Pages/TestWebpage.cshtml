@page
@model ScoreKeeper.Pages.TestWebpageModel
@{
    ViewData["Title"] = "Test Webpage";
}

<head>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>


<h1>@ViewData["Title"]</h1>

<div id="div1">
    <p>This is a test to see if I can make a webpage</p>
</div>

<button class="button buttonbig" onclick="testFunction()">Testing!!!</button>

<div id="div2">

</div>

<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
    Emily modal test
</button>

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Davis modal test</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Im testing to see if my changes go through to the test page! -Emily
            </div>
        </div>
    </div>
</div>
test

<script>function testFunction() {
        const testPara = document.createElement("p");
        const testText = document.createTextNode("The website and button are working as intended.");
        testPara.appendChild(testText);

        const element = document.getElementById("div2");
        element.appendChild(testPara);

        setTimeout(fade_out, 2500);

        function fade_out() {
            testPara.remove();
        }
    }</script>


